<!DOCTYPE html>
    <html lang="en">
       <head>
   <% include ../views/partial_head %>
</head>
<body>
<% include ../views/partial_header %>
                        <div style="height:40px"></div>
                       
                        <div class="col-sm-12">
 <div class="col-sm-3"></div>
<div class="col-sm-5">
<h2 class="col-sm-offset-1" style="margin-bottom:30px">Fill in the email to search for feedback</h2>
 <form class="form-horizontal" method="post" action="/viewfeedback">

    <div class="form-group">
      <label class="control-label col-sm-3" for="username">Email :</label>
      <div class="col-sm-9">
        <input type="email" class="form-control" id="username" placeholder="Enter Email" name="email">
      </div>
 <div class="form-group">        
      <div class="col-sm-offset-3 col-sm-9">
        <button type="submit" class="btn btn-success" style="width:100%!important;margin-top:20px">Submit</button>
   </div></div>
</form>
</div>   </div>    
<div class="container">
  
     <%if (typeof feedbacks !== 'undefined') { %>   
 <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Favourite Food</th>
        <th>Favourite sports</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
 <% feedbacks.forEach(function(feedback){ %>
      <tr>
        <td><%=feedback.firstName%></td>
        <td><%=feedback.lastName%></td>
        <td><%=feedback.email%></td>
<td><%=feedback.customer.food%></td>
<td><%=feedback.customer.sports%></td>
<td><%=feedback.comments%></td>
      </tr>
    <%})%>
    </tbody>
  </table>
<% } %>     
 
     
                                    
                                    
</body>
</html>
